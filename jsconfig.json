{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "checkJs": true,
    "lib": ["ESNext"]
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
